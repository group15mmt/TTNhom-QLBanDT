
@{
    ViewBag.Title = "DanhSachKhachHang";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using N35_WebBanDT.Models.Entities
@model IEnumerable<KhachHang>
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <a href="/Admin/KhachHang/Them"> Thêm Khách Hàng</a>

                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Mã khách hàng
                                    </th>

                                    <th>
                                        Tên khách hàng
                                    </th>

                                    <th>
                                        Giới tính
                                    </th>
                                    <th>
                                        SĐT
                                    </th>

                                    <th>
                                        Địa chỉ
                                    </th>
                                 
                                    <th>
                                        Chi tiết
                                    </th>
                                   
                                    <th>
                                        Sửa
                                    </th>
                                    <th>
                                        Xóa
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td> @item.IDKhachHang</td>
                                   
                                    <td>@item.TenKhachHang</td>
                                    <td>@item.GioiTinh_KH</td>

                                    <td>@item.SDT_KH</td>
                                    <td>@item.DiaChi_KH</td>
                                   
                                    <td><a href="/Admin/KhachHang/ChiTietKhachHang/@item.IDKhachHang">Xem chi tiết</a></td>
                                    <td><a href="/Admin/KhachHang/Sua/@item.IDKhachHang">Sửa</a></td>
                                    <td><a href="/Admin/KhachHang/Xoa/@item.IDKhachHang">Xóa</a></td>
                                </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div><!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->
        <footer class="footer">
            <div class="container-fluid clearfix">
                <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">
                    Trang quản trị
                    <a href="http://www.bootstrapdash.com/" target="_blank"></a>
                </span>
                <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">
                    Địa chỉ:234-Hoàng Quốc Việt-Hà Nội
                    <i class="mdi mdi-heart text-danger"></i>
                </span>
            </div>
        </footer>
        <!-- partial -->
    </div>
    <!-- main-panel ends -->
</div>


